<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black25"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>

            <item
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/main"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>

            <item
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <corners android:radius="8dp"/>
                    <padding
                        android:top="8dp"
                        android:bottom="8dp"
                        android:right="16dp"
                        android:left="16dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>