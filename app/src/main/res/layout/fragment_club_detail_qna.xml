<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.club.detail.qna.ClubDetailQnaFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/lay_top_fragment">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_club_detail_qna"
            style="@style/recycler"
            android:paddingBottom="100dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_club_detail_qna"
            style="@style/btn"
            android:text="@string/club_qna_quest"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="@id/recycler_club_detail_qna"
            app:layout_constraintEnd_toEndOf="@id/recycler_club_detail_qna"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>